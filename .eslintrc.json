{
  "extends": ["next", "next/core-web-vitals", "eslint:recommended"],
  // we just import React global instead of component scope
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "no-unused-vars": [1, { "args": "after-used", "argsIgnorePattern": "^_" }],
    "prettier/prettier": [
      "wran",
      {
        "trailingComma": "es5",
        "tabWidth": 2,
        "semi": false
      }
    ]
  }
}
